{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":disableDependencyDashboard",
		":prHourlyLimitNone",
		":rebaseStalePrs",
		"group:recommended",
		"group:allNonMajor"
	],
	"autoApprove": true,
	"rangeStrategy": "pin",
	"onboardingPrTitle": "[DEV] Configure Renovate",
	"semanticCommits": "disabled",
	"commitMessagePrefix": "[CHORE]",
	"configMigration": true,
	"labels": [
		"Component: Tooling"
	],
	"packageRules": [
		{
			"matchDepTypes": [
				"engines"
			],
			"enabled": false
		},
		{
			"matchPackageNames": [
				"docker.io/node",
				"@types/node"
			],
			"allowedVersions": "^18.x"
		}
	]
}
