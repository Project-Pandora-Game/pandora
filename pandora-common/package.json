{
	"name": "pandora-common",
	"version": "0.1.0",
	"private": true,
	"repository": "git@github.com:Project-Pandora-Game/pandora-common.git",
	"license": "MIT",
	"engines": {
		"node": ">=16.x"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"/dist/**/*",
		".eslintrc.json",
		"tsconfig.base.json"
	],
	"workspaces": {
		"nohoist": [
			"rimraf",
			"typescript"
		]
	},
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc -p ./tsconfig.src.json",
		"build:swc": "swc src -d dist",
		"predev": "rimraf dist",
		"dev": "tsc -p ./tsconfig.src.json -w",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives .",
		"lint:fix": "eslint --fix .",
		"type-check": "tsc -p . --noEmit",
		"type-check:test": "tsc -p ./tsconfig.test.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.src.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"prepack": "yarn run build",
		"install": "yarn run build"
	},
	"dependencies": {
		"@types/node": "^18.11.0",
		"lodash": "^4.17.21",
		"rimraf": "^3.0.2",
		"tslib": "^2.4.0",
		"typescript": "^4.8.3",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.3.2",
		"@swc/jest": "^0.2.22",
		"@types/jest": "^29.0.3",
		"@typescript-eslint/eslint-plugin": "^5.38.0",
		"@typescript-eslint/parser": "^5.38.0",
		"eslint": "^8.23.1",
		"jest": "^29.0.3",
		"ts-mockito": "^2.6.1"
	}
}
