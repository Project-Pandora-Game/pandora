{
	"name": "pandora-common",
	"version": "0.1.0",
	"private": true,
	"repository": "git@github.com:Project-Pandora-Game/pandora-common.git",
	"license": "LGPL-3.0-or-later",
	"engines": {
		"node": ">=18.x"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"/dist/**/*",
		"/src/**/*",
		".eslintrc.json",
		"tsconfig.base.json",
		"tsconfig.json"
	],
	"scripts": {
		"clean": "rimraf dist",
		"build": "pnpm run --silent clean && tsc -p ./tsconfig.json",
		"dev": "tsc -p ./tsconfig.json -w",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives .",
		"lint:fix": "eslint --fix .",
		"type-check": "pnpm run '/type-check:.*/'",
		"type-check:test": "tsc -p ./test/tsconfig.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"prepack": "pnpm run build",
		"install": "pnpm run --silent build"
	},
	"dependencies": {
		"@types/async-lock": "1.4.2",
		"@types/lodash": "4.14.202",
		"@types/node": "18.19.4",
		"async-lock": "1.4.1",
		"immer": "10.0.3",
		"lodash": "4.17.21",
		"nanoid": "3.3.7",
		"rimraf": "5.0.5",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@types/jest": "29.5.11",
		"@typescript-eslint/eslint-plugin": "6.18.0",
		"@typescript-eslint/parser": "6.18.0",
		"eslint": "8.56.0",
		"jest": "29.7.0",
		"ts-jest": "29.1.1",
		"ts-mockito": "2.6.1"
	}
}
