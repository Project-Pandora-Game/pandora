{
	"name": "pandora-common",
	"version": "0.1.0",
	"private": true,
	"repository": "git@github.com:Project-Pandora-Game/pandora-common.git",
	"license": "LGPL-3.0-or-later",
	"engines": {
		"node": ">=22.x"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./assets/modules/*": {
			"types": "./dist/assets/modules/*.d.ts",
			"default": "./dist/assets/modules/*.js"
		},
		"./networking/helpers": {
			"types": "./dist/networking/helpers.d.ts",
			"default": "./dist/networking/helpers.js"
		},
		"./gameLogic/characterModifiers/helpers/*": {
			"types": "./dist/gameLogic/characterModifiers/helpers/*.d.ts",
			"default": "./dist/gameLogic/characterModifiers/helpers/*.js"
		},
		"./utility": {
			"types": "./dist/utility/index.d.ts",
			"default": "./dist/utility/index.js"
		},
		"./environment": {
			"types": "./dist/environment.d.ts",
			"default": "./dist/environment.js"
		},
		"./tsconfig.base.json": "./tsconfig.base.json"
	},
	"files": [
		"/dist/**/*",
		"tsconfig.base.json"
	],
	"scripts": {
		"clean": "rimraf dist",
		"build": "pnpm run --silent clean && tsc -p ./tsconfig.json",
		"dev": "tsc -p ./tsconfig.json -w --skipLibCheck",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "eslint --fix .",
		"type-check": "pnpm run '/type-check:.*/'",
		"type-check:test": "tsc -p ./test/tsconfig.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"prepack": "pnpm run build"
	},
	"dependencies": {
		"@types/async-lock": "1.4.2",
		"@types/lodash-es": "4.17.12",
		"@types/node": "22.19.1",
		"async-lock": "1.4.1",
		"delaunator": "5.0.1",
		"immer": "10.2.0",
		"lodash-es": "4.17.21",
		"nanoid": "5.1.6",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@jest/globals": "30.2.0",
		"@types/delaunator": "5.0.3",
		"jest": "30.2.0",
		"rimraf": "6.1.2",
		"ts-jest": "29.4.5",
		"ts-mockito": "2.6.1",
		"tslib": "2.8.1",
		"typescript": "5.9.3"
	}
}
