{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "./dist",
		"rewriteRelativeImportExtensions": true,
		"tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
		"rootDir": "./src",
		"incremental": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"removeComments": false
	},
	"include": ["./src/**/*"]
}
