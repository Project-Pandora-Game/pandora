{
	"name": "pandora-server-directory",
	"version": "0.1.0",
	"private": true,
	"repository": "github:Project-Pandora-Game/pandora-server-directory",
	"license": "LGPL-3.0-or-later",
	"engines": {
		"node": ">=22.x"
	},
	"type": "module",
	"scripts": {
		"clean": "rimraf dist",
		"build": "pnpm run --silent clean && tsc -p ./tsconfig.json",
		"dev": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --skipLibCheck --noClear --onFirstSuccess \"nodemon --enable-source-maps --env-file=.env dist/index.js --development\"",
		"dev:inspect": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --skipLibCheck --noClear --onFirstSuccess \"nodemon --inspect=25860 --enable-source-maps --env-file=.env dist/index.js --development\"",
		"start": "node --enable-source-maps --env-file=.env dist/index.js",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "eslint --fix .",
		"type-check": "pnpm run '/type-check:.*/'",
		"type-check:test": "tsc -p ./test/tsconfig.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch"
	},
	"files": [
		"dist"
	],
	"nodemonConfig": {
		"watch": [
			"dist",
			".env",
			"node_modules/pandora-common/dist"
		],
		"signal": "SIGTERM",
		"ignoreRoot": [
			".git"
		]
	},
	"dependencies": {
		"@aws-sdk/client-sesv2": "3.922.0",
		"@aws-sdk/credential-provider-node": "3.922.0",
		"@octokit/auth-oauth-app": "9.0.3",
		"@octokit/rest": "22.0.1",
		"argon2": "0.44.0",
		"async-lock": "1.4.1",
		"discord.js": "14.24.2",
		"express": "5.1.0",
		"json-diff": "1.0.6",
		"lodash-es": "4.17.21",
		"mongodb": "6.20.0",
		"mongodb-memory-server-core": "10.3.0",
		"nanoid": "5.1.6",
		"nodemailer": "7.0.10",
		"pandora-common": "workspace:*",
		"prom-client": "15.1.3",
		"socket.io": "4.8.1",
		"wtfnode": "0.10.1",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@jest/globals": "30.2.0",
		"@types/async-lock": "1.4.2",
		"@types/express": "5.0.5",
		"@types/json-diff": "1.0.3",
		"@types/lodash-es": "4.17.12",
		"@types/node": "22.18.13",
		"@types/nodemailer": "7.0.3",
		"@types/semver": "7.7.1",
		"@types/wtfnode": "0.10.0",
		"discord-api-types": "0.38.31",
		"jest": "30.2.0",
		"nodemon": "3.1.10",
		"rimraf": "6.1.0",
		"ts-jest": "29.4.5",
		"ts-mockito": "2.6.1",
		"tsc-watch": "7.2.0",
		"tslib": "2.8.1",
		"type-fest": "5.1.0",
		"typescript": "5.9.3"
	}
}
