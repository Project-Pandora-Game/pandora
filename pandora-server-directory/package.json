{
	"name": "pandora-server-directory",
	"version": "0.1.0",
	"private": true,
	"repository": "github:Project-Pandora-Game/pandora-server-directory",
	"license": "GPL-3.0-or-later",
	"engines": {
		"node": ">=18.x"
	},
	"scripts": {
		"clean": "rimraf dist",
		"build": "pnpm run --silent clean && tsc -p ./tsconfig.json",
		"dev": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --noClear --onFirstSuccess \"nodemon --enable-source-maps -r dotenv/config dist/index.js --development\"",
		"dev:inspect": "pnpm run --silent clean && tsc-watch -p ./tsconfig.json --noClear --onFirstSuccess \"nodemon --inspect=25860 --enable-source-maps -r dotenv/config dist/index.js --development\"",
		"start": "node --enable-source-maps -r dotenv/config dist/index.js",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives .",
		"lint:fix": "eslint --fix .",
		"type-check": "pnpm run '/type-check:.*/'",
		"type-check:test": "tsc -p ./test/tsconfig.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch"
	},
	"files": [
		"dist"
	],
	"nodemonConfig": {
		"watch": [
			"dist",
			".env",
			"node_modules/pandora-common/dist"
		],
		"signal": "SIGTERM",
		"ignoreRoot": [
			".git"
		]
	},
	"dependencies": {
		"@aws-sdk/client-ses": "3.441.0",
		"@aws-sdk/credential-provider-node": "3.441.0",
		"@octokit/auth-oauth-app": "7.0.1",
		"@octokit/rest": "20.0.2",
		"argon2": "0.31.1",
		"async-lock": "1.4.0",
		"axios": "1.6.0",
		"discord.js": "14.13.0",
		"dotenv": "16.3.1",
		"express": "4.18.2",
		"json-diff": "1.0.6",
		"lodash": "4.17.21",
		"mongodb": "6.2.0",
		"mongodb-memory-server-core": "9.0.1",
		"nanoid": "3.3.6",
		"nodemailer": "6.9.7",
		"pandora-common": "workspace:*",
		"prom-client": "15.0.0",
		"socket.io": "4.6.1",
		"wtfnode": "0.9.1",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@types/async-lock": "1.4.1",
		"@types/express": "4.17.20",
		"@types/jest": "29.5.7",
		"@types/json-diff": "1.0.1",
		"@types/lodash": "4.14.200",
		"@types/node": "18.18.8",
		"@types/nodemailer": "6.4.13",
		"@types/wtfnode": "0.7.2",
		"@typescript-eslint/eslint-plugin": "6.9.1",
		"@typescript-eslint/parser": "6.9.1",
		"discord-api-types": "0.37.62",
		"eslint": "8.52.0",
		"jest": "29.7.0",
		"nodemon": "3.0.1",
		"rimraf": "5.0.5",
		"ts-jest": "29.1.1",
		"ts-mockito": "2.6.1",
		"tsc-watch": "6.0.4",
		"tslib": "2.6.2",
		"typescript": "5.2.2"
	}
}
