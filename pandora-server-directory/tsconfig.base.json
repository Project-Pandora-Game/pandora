{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ESNext"],
		"types": ["@types/node", "@types/jest"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"noEmitOnError": true,
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true
	}
}
