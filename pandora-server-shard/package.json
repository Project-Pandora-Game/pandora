{
	"name": "pandora-server-shard",
	"version": "0.1.0",
	"private": true,
	"repository": "github:Project-Pandora-Game/pandora-server-shard",
	"license": "GPL-3.0-or-later",
	"engines": {
		"node": ">=16.x"
	},
	"scripts": {
		"clean": "rimraf dist",
		"build": "pnpm run --silent clean && tsc -p ./tsconfig.src.json",
		"build:swc": "pnpm run --silent clean &&  swc src -d dist",
		"dev": "pnpm run --silent clean && tsc-watch -p ./tsconfig.src.json --noClear --onFirstSuccess \"nodemon --enable-source-maps -r dotenv/config dist/index.js --development\"",
		"dev:inspect": "pnpm run --silent clean && tsc-watch -p ./tsconfig.src.json --noClear --onFirstSuccess \"nodemon --inspect=25861 --enable-source-maps -r dotenv/config dist/index.js --development\"",
		"start": "node --enable-source-maps -r dotenv/config dist/index.js",
		"lint": "eslint --max-warnings 0 --report-unused-disable-directives .",
		"lint:fix": "eslint --fix .",
		"type-check": "tsc -p . --noEmit",
		"type-check:test": "tsc -p ./tsconfig.test.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.src.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch"
	},
	"nodemonConfig": {
		"watch": [
			"dist",
			".env",
			"node_modules/pandora-common/dist"
		],
		"delay": 1000,
		"signal": "SIGTERM",
		"ignoreRoot": [
			".git"
		]
	},
	"dependencies": {
		"async-lock": "^1.4.0",
		"axios": "^1.3.4",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"lodash": "^4.17.21",
		"mongodb": "^5.1.0",
		"nanoid": "^3.3.4",
		"pandora-common": "workspace:*",
		"prom-client": "^14.2.0",
		"socket.io": "^4.6.1",
		"socket.io-client": "~4.6.1",
		"wtfnode": "^0.9.1"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.41",
		"@swc/jest": "^0.2.24",
		"@types/async-lock": "^1.4.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.0",
		"@types/lodash": "^4.14.191",
		"@types/node": "^18.15.3",
		"@types/wtfnode": "^0.7.0",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"discord-api-types": "^0.37.36",
		"eslint": "^8.36.0",
		"jest": "^29.5.0",
		"nodemon": "^2.0.21",
		"rimraf": "^4.4.0",
		"ts-mockito": "^2.6.1",
		"tsc-watch": "^6.0.0",
		"tslib": "^2.5.0",
		"typescript": "^5.0.2"
	}
}
