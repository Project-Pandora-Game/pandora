{
	"name": "pandora-server-shard",
	"version": "0.1.0",
	"private": true,
	"repository": "github:Project-Pandora-Game/pandora-server-shard",
	"license": "LGPL-3.0-or-later",
	"engines": {
		"node": ">=24.x"
	},
	"type": "module",
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "rimraf dist && tsc -p ./tsconfig.json",
		"dev": "rimraf dist && tsc-watch -p ./tsconfig.json --skipLibCheck --noClear --onFirstSuccess \"nodemon --enable-source-maps --env-file=.env dist/index.js --development\"",
		"dev:inspect": "rimraf dist && tsc-watch -p ./tsconfig.json --skipLibCheck --noClear --onFirstSuccess \"nodemon --inspect=25861 --enable-source-maps --env-file=.env dist/index.js --development\"",
		"start": "node --enable-source-maps --env-file=.env dist/index.js",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "eslint --fix .",
		"type-check": "pnpm run '/type-check:.*/'",
		"type-check:test": "tsc -p ./test/tsconfig.json --noEmit",
		"type-check:src": "tsc -p ./tsconfig.json --noEmit",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch"
	},
	"files": [
		"dist"
	],
	"nodemonConfig": {
		"watch": [
			"dist",
			".env",
			"node_modules/pandora-common/dist"
		],
		"delay": 1000,
		"signal": "SIGTERM",
		"ignoreRoot": [
			".git"
		]
	},
	"dependencies": {
		"async-lock": "1.4.1",
		"express": "5.2.1",
		"immer": "11.1.3",
		"json-diff": "1.0.6",
		"lodash-es": "4.17.23",
		"mongodb": "7.1.0",
		"nanoid": "5.1.6",
		"pandora-common": "workspace:*",
		"prom-client": "15.1.3",
		"socket.io": "4.8.3",
		"socket.io-client": "4.8.3",
		"wtfnode": "0.10.1",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@jest/globals": "30.2.0",
		"@types/async-lock": "1.4.2",
		"@types/express": "5.0.6",
		"@types/json-diff": "1.0.3",
		"@types/lodash-es": "4.17.12",
		"@types/node": "24.10.12",
		"@types/wtfnode": "0.10.0",
		"discord-api-types": "0.38.38",
		"jest": "30.2.0",
		"nodemon": "3.1.11",
		"rimraf": "6.1.2",
		"ts-jest": "29.4.6",
		"ts-mockito": "2.6.1",
		"tsc-watch": "7.2.0",
		"tslib": "2.8.1",
		"typescript": "5.9.3"
	}
}
